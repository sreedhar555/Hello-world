                    }
                }

                if (State == "") {
                    if (valMsg == "") {
                        valMsg = "Please select State";
                    } else {
                        valMsg = valMsg + ", State ";
                    }
                }

                if (City == "") {
                    if (valMsg == "") {
                        valMsg = "Please enter City";
                    } else {
                        valMsg = valMsg + ",  City";
                    }
                }
            }
            if (valMsg == "") {
                if (valMsg == "") {

                    return true;

                } else {
                    document.getElementById("lblValMessage").innerHTML = valMsg;
                    return false;
                }
            }
            else {
                document.getElementById("lblValMessage").innerHTML = valMsg;
                return false;
            }
        }
    });
</script>

